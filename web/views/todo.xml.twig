<?xml version="1.0" encoding="utf-8"?>
<xml>
    <root>
        <todos>
        {% for todo in todos %}
            <todo>
                <title>todo['title']</title>
                <description>todo['description']</description>
                <due_date>todo['due_date']</due_date>
                <status>todo['status']</status>
            </todo>
        {% endfor %}
        </todos>
    </root>
</xml>